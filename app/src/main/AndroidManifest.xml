<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carinfo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".CarInfo"
        android:allowBackup="true"
        android:icon="@drawable/car_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.ModelActivity" />
        <activity
            android:name=".view.FlashScreen"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MakeActivity" />
        <activity android:name=".view.YearActivity" />
        <activity android:name=".view.BaseActivity" />
        <activity android:name=".view.StyleActivity" />
        <activity
            android:name=".view.CarDetailsActivity"
            android:label="@string/title_activity_car_details"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>